<?php
function main($argv) {
  if (!count($argv)) {
    echo "Location missing:\n";
    echo "Use: cli-revision <path/to/directory>\n";
    echo "\n";
    exit(1);
  }
  $path = $argv[0];
  if (!is_dir($path)) {
    echo "Invalid location: {$path}\n";
    echo "\n";
    exit(1);
  }
  $revision = time();
  $fileName = "{$path}/a3gz-php-cli-tools.revision";
  file_put_contents($fileName, $revision);
}

main($argv);
