#!/usr/bin/env php
<?php
include dirname(__DIR__) . '/functions.inc.php';

function main($argv) {
  array_shift($argv);
  if (!count($argv)) {
    log("Parameters missing:\n");
    log("Use: cli-revision path/to/directory [file-name]\n");
    terminate("\n");
  }
  $path = $argv[0];
  if (substr($path, -1) === '/') {
    $path = substr($path, 0, strlen($path)-1);
  }
  $fileName = null;
  if (count($argv) > 1) {
    $fileName = $argv[1];
  }
  if (!is_dir($path)) {
    log("Invalid location: {$path}\n");
    terminate("\n");
  }
  $revision = time();
  if ($fileName === null) {
    $fileName = "{$path}/a3gz-php-cli-tools.revision";
  }
  file_put_contents($fileName, $revision);
}

main($argv);
