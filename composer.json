{
    "name": "a3gz/php-cli-tools",
    "description": "Various CLI tools for eacy deployment of PHP applications",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Alejandro Arbiza",
            "email": "alejandro@roetal.com"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/leafo/scssphp"
        }
    ],
    "require": {
        "scssphp/scssphp": "1.0.4"
    },
    "bin": [
        "bin/cli-copy",
        "bin/cli-minify",
        "bin/cli-sass2css",
        "bin/cli-revision"
    ],
    "scripts": {
        "test-copy": "php bin/cli-copy test/cli-copy-files.json --verbose",
        "test-minify": "php bin/cli-minify test/src/ test/dist --filetypes=js --suffix=.min --verbose",
        "test-css": "php bin/cli-sass2css test/src/ test/dist --formatter=expanded",
        "test-all": [
            "composer run-script test-copy",
            "composer run-script test-minify",
            "composer run-script test-css"
        ],
        "test-revision": "composer run-script cli-revision ./"
    }
}
