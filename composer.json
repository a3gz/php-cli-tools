{
  "name": "a3gz/php-cli-tools",
  "description": "Command line tools to prepare Web application assets for deployment",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Alejandro Arbiza",
      "email": "alejandro@roetal.com"
    }
  ],
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/leafo/scssphp"
    },
    {
      "type": "vcs",
      "url": "https://github.com/a3gz/lessphp"
    }
  ],
  "autoload": {
    "psr-4": {
      "PhpCliTools\\": "src/lib/"
    }
  },
  "require": {
    "scssphp/scssphp": "1.0.4",
    "leafo/lessphp": "0.5.0"
  },
  "bin": [
    "bin/cli-run"
  ],
  "scripts": {
    "test-runone": "php bin/cli-run test/php-cli-tools.config.json specific-task",
    "test-runall": "php bin/cli-run test/php-cli-tools.config.json "
  }
}
