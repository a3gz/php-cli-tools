{
  "01": [
    {
      "runner": "less2css",
      "source": "test/src/less/",
      "destination": "test/dist",
      "formatter": "compressed",
      "verbose": true
    }
  ],
  "02": [
    {
      "runner": "minify",
      "source": "test/src/",
      "destination": "test/dist/",
      "filetypes": ["js"],
      "suffix": ".min",
      "verbose": true
    }
  ],
  "03": [
    {
      "runner": "revision",
      "destination": "./"
    }
  ],
  "04": [
    {
      "runner": "sass2css",
      "source": "test/src/scss/",
      "destination": "test/dist",
      "formatter": "crunched",
      "verbose": true
    }
  ],
  "05": [
    {
      "runner": "copy",
      "source": "test/src/text1.txt",
      "destination": "test/dist/",
      "verbose": true,
      "recursive": false
    },
    {
      "runner": "copy",
      "source": "test/src/text2.txt",
      "destination": "test/dist/",
      "rename": "text2-newname.txt",
      "verbose": true,
      "recursive": false
    },
    {
      "runner": "copy",
      "source": "test/src",
      "destination": "test/dist/bulk/",
      "verbose": true,
      "recursive": true
    }
  ]
}
